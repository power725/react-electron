{
  "name": "react-electron",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@craco/craco": "^5.9.0",
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.15",
    "@reduxjs/toolkit": "^1.6.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "axios": "^0.21.4",
    "cross-env": "^7.0.3",
    "dateformat": "^4.5.1",
    "font-awesome": "4.7",
    "formik": "^2.2.9",
    "radium": "^0.26.1",
    "react": "^17.0.2",
    "react-animations": "^1.0.0",
    "react-datepicker": "^4.2.1",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^1.1.5",
    "redux-logger": "^3.0.6",
    "serve": "^12.0.1",
    "web-vitals": "^1.1.2",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^9.8.6",
    "concurrently": "^5.2.0",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "electron-is-dev": "^2.0.0",
    "postcss": "^7.0.36",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.4",
    "wait-on": "^5.1.0"
  },
  "scripts": {
    "start": "serve ./build",
    "dev": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron public/electron.js",
    "package-win": "npm run build && robocopy public build/electron electron-package.js & electron-builder build --win -c.extraMetadata.main=build/electron/electron-package.js --publish never",
    "package-mac": "npm run build && cp -r public/electron-package.js build/electron && electron-builder build --mac -c.extraMetadata.main=build/electron/electron-package.js --publish never"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "react-electron",
      "owner": "power725"
    }
  }
}
